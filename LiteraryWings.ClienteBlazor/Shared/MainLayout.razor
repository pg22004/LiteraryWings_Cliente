@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="indigo">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @*<MudText Typo="Typo.h5" Class="ml-3">Literary Wings</MudText>*@
        <img class="Logo" src="https://firebasestorage.googleapis.com/v0/b/bruflix-imecs.appspot.com/o/Imagenes_Pelicula%2FLibros%2FLetras.png?alt=media&token=137d4aea-7790-4e45-843a-1fbaf84b72fb&_gl=1*13ljq30*_ga*ODk4Mjc0NDU5LjE2Nzc3MDIwNjY.*_ga_CW55HF8NVT*MTY5NTg0NjQwNC4xNi4xLjE2OTU4NDY0MzguMjYuMC4w" alt="Logo">
        <MudSpacer />
        @*<MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />*@
    </MudAppBar>
    <MudDrawer Class="pa-4 indigo lighten-3 shades-text text-black" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}