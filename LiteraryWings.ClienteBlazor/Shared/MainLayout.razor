@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="grey darken-4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @*<MudText Typo="Typo.h5" Class="ml-3">Literary Wings</MudText>*@
        <img class="Logo" src="https://firebasestorage.googleapis.com/v0/b/bruflix-imecs.appspot.com/o/Imagenes_Pelicula%2FLibros%2FLogoC.png?alt=media&token=0d6be713-5b5c-4029-bc2f-4fcc29c8f99b&_gl=1*mwm0tv*_ga*ODk4Mjc0NDU5LjE2Nzc3MDIwNjY.*_ga_CW55HF8NVT*MTY5NTg4MjYzMC4xOC4xLjE2OTU4ODMzNjMuNDkuMC4w" alt="Logo">
        <MudSpacer />
    </MudAppBar>
    <MudDrawer Class="pa-4 shades grey darken-4 shades-text text-white" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}