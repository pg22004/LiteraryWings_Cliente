@inherits LayoutComponentBase

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1" Class="grey darken-4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        @*<MudText Typo="Typo.h5" Class="ml-3">Literary Wings</MudText>*@
        <img class="Logo" src="https://firebasestorage.googleapis.com/v0/b/bruflix-imecs.appspot.com/o/Imagenes_Pelicula%2FLibros%2Finkpx-word-art.png?alt=media&token=94ba4a21-426d-47ed-8f01-ace3c842597a&_gl=1*wugnvn*_ga*ODk4Mjc0NDU5LjE2Nzc3MDIwNjY.*_ga_CW55HF8NVT*MTY5NTg1MjA1MS4xNy4xLjE2OTU4NTIxMzMuNDguMC4w" alt="Logo">
        <MudSpacer />
        @*<MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />*@
    </MudAppBar>
    <MudDrawer Class="pa-4 shades grey darken-4 shades-text text-white" @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent Class="pa-4">
        @Body
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}