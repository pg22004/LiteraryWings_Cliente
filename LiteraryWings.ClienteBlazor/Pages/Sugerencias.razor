@page "/sugerencias"
@inject NavigationManager NavigationManager
@using Models
@using Services
@inject ISugerenciaService SugerenciaService

<br />
<br />
<br />
<h1 class="Titulo-SugerenciaDetalles">Sugerencias</h1>
  
<br />
<br />
<br />

    <MudGrid>
    <MudItem xs="7" sm="5">
        <MudPaper Class="p-4">
           
            <EditForm Model="sugerencia" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                <div class="card2">
                    <MudCardContent col>
                        <MudTextField Label="Nombre" @bind-value-="sugerencia.Nombre" For="@(() => sugerencia.Nombre)" />
                        <br />
                        <MudTextField Label="Correo" @bind-Value="sugerencia.Correo" For="@(() => sugerencia.Correo)" />
                        <br />
                        <MudTextField Label="Comentario" @bind-Value="sugerencia.Comentario" For="@(() => sugerencia.Comentario)" />
                        <MudDivider />
                        <br/>
                    </MudCardContent>     
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Success" Class="ml-auto">Guardar</MudButton>
                    <br />
                </div>
            </EditForm>
            @if (showLeaveAlert)
            {
                <MudAlert Severity="Severity.Error" ContentAlignment="HorizontalAlignment.Center" ShowCloseIcon="true" CloseIconClicked="(() => CloseMe(true))">No se pudo guardar.</MudAlert>
            }
        </MudPaper>
    </MudItem>
</MudGrid>


@code {
    bool success;
    private bool showLeaveAlert = false;
    Sugerencia sugerencia = new Sugerencia();

    private async Task OnValidSubmit(EditContext context)
    {
        int result = await SugerenciaService.Save(sugerencia);
        if (result == 1)
        {
            success = true;
            StateHasChanged();
            NavigationManager.NavigateTo("Listsuegerencia");
        }
        else
        {
            showLeaveAlert = true;
        }

    }

    private void CloseMe(bool value)
    {
        showLeaveAlert = false;
    }
}
