@page "/categorias"
@using Models
@using Services
@inject ICategoriaService CategoriaService

<br />
<br />
<br />
<h1 class="Titulo-Categorias">Categorias</h1>
@*<MudText Typo="Typo.h4" Class="Titulo-Categorias">Categorias</MudText>*@
<br />

<div class="row">

    @foreach (var item in cate)
    {

        <div class="col-md-4">
            <div class="contenedorboton">

                <a class="butt" type="button" href="@($"/librcate/{item.Id}")">
                    <strong class="text">@item.Nombre</strong>
                    <div id="container-stars">
                        <div id="stars"></div>
                    </div>

                    <div id="glow">
                        <div class="circle"></div>
                        <div class="circle"></div>
                    </div>
                </a>

                @* <a class="butt" >
                    <span class="text">@item.Nombre</span>
                    <div class="wave"></div>
                </a> *@

            </div>
        </div>
    }
</div>



@code {
    IEnumerable<Categoria> cate = new List<Categoria>();
    protected override async Task OnInitializedAsync()
    {
        cate = await CategoriaService.GetAll();
    }
}
